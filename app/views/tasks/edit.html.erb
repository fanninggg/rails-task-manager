<h1>Edit <%= @task.title %></h1>

<%= form_for(@task) do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :details %>
  <%= f.text_field :details %>

  <%= f.check_box :completed %>

  <%= f.submit %>
<% end %>
<p></p>
<%= link_to 'Back to all tasks', tasks_path, class: "link" %>
